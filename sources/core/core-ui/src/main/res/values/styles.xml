<resources>

    <style name="RootTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="VKMCAppTheme" parent="RootTheme">
        <item name="colorPrimary">@color/uikit_primary</item>
        <item name="colorPrimaryDark">@color/uikit_primaryDark</item>
        <item name="colorAccent">@color/uikit_accent</item>
        <item name="android:windowBackground">@color/uikit_white</item>
        <item name="android:statusBarColor">@color/uikit_transparent</item>
        <item name="android:navigationBarColor">@color/uikit_transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BackdropBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="BackdropBottomSheetStyle.Dark">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_dark</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BackdropBottomSheetStyle</item>
        <item name="colorAccent">@color/uikit_accent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/uikit_white</item>
    </style>

    <style name="BottomSheetDialogTheme.Dark">
        <item name="bottomSheetStyle">@style/BackdropBottomSheetStyle.Dark</item>
        <item name="colorAccent">@color/uikit_accent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/uikit_black</item>
    </style>

    <style name="VKMCAppTheme.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/uikit_black_20</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/uikit_black</item>
    </style>

    <style name="SubtitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uikit_gray</item>
    </style>

    <style name="MapClusterText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/uikit_black</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uikit_white</item>
        <item name="android:background">@drawable/ripple_button_light</item>
    </style>

    <style name="Button.Dark">
        <item name="android:textColor">@color/uikit_black</item>
        <item name="android:background">@drawable/ripple_button_dark</item>
    </style>

    <style name="Button.Mini">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Button.Mini.Light">
        <item name="android:textColor">@color/uikit_black</item>
        <item name="android:background">@drawable/ripple_button_mini_light</item>
    </style>

</resources>
