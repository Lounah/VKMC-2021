<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VKMCAppTheme" parent="RootTheme">
        <item name="colorPrimary">@color/uikit_primary</item>
        <item name="colorPrimaryDark">@color/uikit_primaryDark</item>
        <item name="colorAccent">@color/uikit_accent</item>
        <item name="android:windowBackground">@color/uikit_white</item>
        <item name="android:statusBarColor">@color/uikit_white</item>
        <item name="android:navigationBarColor">@color/uikit_transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="VKMCAppTheme.Dark">
        <item name="android:windowBackground">#0A0A0A</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
